{
  "variables": {
    "vm_name": "centos7base",
    "iso_url": "../../iso/CentOS-7-x86_64-DVD-1810.iso",
    "iso_sha256": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "vm_version": "1.0",
    "vm_description": "Mihai's CentOS 7 template"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "format": "ova",
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--description", "{{user `vm_description`}}",
        "--version", "{{user `vm_version`}}"
      ],
      "guest_os_type": "RedHat_64",
      "disk_size": 40960,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--ioapic", "on"],
        ["modifyvm", "{{.Name}}", "--pae", "on"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--bioslogodisplaytime", "1"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--usbehci", "off"]
      ],
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "output_directory": "builds/{{user `vm_name`}}",
      "shutdown_command": "sudo systemctl poweroff",
      "http_directory": "http",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_timeout": "15m",
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "5s",
      "boot_command": [
        "<up><wait><tab> text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7-minimal-ks.cfg net.ifnames=0<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/cleanup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "builds/{{user `vm_name`}}/{{.Provider}}-{{user `vm_name`}}.box",
      "keep_input_artifact": true
    }
  ]
}
